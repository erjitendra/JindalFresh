<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.android.jindalfresh.app_activities.auth.AddressActivity">

    <EditText
        android:id="@+id/address_EditText_addresss_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Address 1" />

    <EditText
        android:id="@+id/address_EditText_addresss_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Address 2" />

    <EditText
        android:id="@+id/address_EditText_street"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Street" />

    <EditText
        android:id="@+id/address_EditText_landmark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Landmark" />

    <EditText
        android:id="@+id/address_EditText_district"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="District" />

    <EditText
        android:id="@+id/address_EditText_city"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="City" />

    <EditText
        android:id="@+id/address_EditText_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="State" />

    <EditText
        android:id="@+id/address_EditText_pincode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Pincode" />

    <Button
        android:id="@+id/address_button_continue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Continue" />
</LinearLayout>


